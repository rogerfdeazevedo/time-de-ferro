<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".activity.TutorialActivity">

        <View
            android:id="@+id/view_containerTitle"
            style="@style/ContainerTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txtView_title"
            style="@style/Title"
            android:text="@string/title_activity_tutorial"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/view_ContainerImgCena"
            style="@style/ContainerCenaBorder"
            app:layout_constraintTop_toBottomOf="@+id/txtView_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view_containerComponents"/>

        <ImageView
            android:id="@+id/imgView_CenaEscritorio"
            android:src="@drawable/img_escritorio"
            style="@style/ImgCena"
            app:layout_constraintTop_toTopOf="@+id/view_ContainerImgCena"
            app:layout_constraintStart_toStartOf="@+id/view_ContainerImgCena"
            app:layout_constraintEnd_toEndOf="@+id/view_ContainerImgCena"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerImgCena"/>

        <View
            android:id="@+id/view_containerComponents"
            style="@style/ContainerComponents"
            app:layout_constraintTop_toBottomOf="@+id/view_ContainerImgCena"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txtView_gameTitle"
            style="@style/TextViewGameTitle"
            android:text="@string/game_title_tutorial"
            app:layout_constraintTop_toTopOf="@+id/view_containerComponents"
            app:layout_constraintStart_toStartOf="@+id/view_containerComponents"
            app:layout_constraintEnd_toEndOf="@+id/view_containerComponents"
            app:layout_constraintBottom_toTopOf="@id/txtView_gameDesc"/>

        <TextView
            android:id="@+id/txtView_gameDesc"
            style="@style/TextViewGameDesc"
            android:text="@string/game_desc_tutorial"
            app:layout_constraintTop_toBottomOf="@+id/txtView_gameTitle"
            app:layout_constraintStart_toStartOf="@+id/view_containerComponents"
            app:layout_constraintEnd_toEndOf="@+id/view_containerComponents"
            app:layout_constraintBottom_toBottomOf="@+id/view_containerComponents"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_comecar"
            style="@style/Buttom"
            android:text="@string/btn_new_game"
            app:layout_constraintTop_toBottomOf="@+id/view_containerComponents"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>