<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".activity.TutorialActivity">

        <View
            android:id="@+id/view_containerTitle"
            style="@style/ContainerTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtView_title"
            style="@style/Title"
            android:text="@string/title_activity_city_map"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_ContainerBorder"
            style="@style/ContainerCityBackgroundBorder"
            app:layout_constraintTop_toBottomOf="@+id/txtView_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/imgView_CityBackground"
            android:src="@drawable/img_city_background"
            style="@style/ImgCityBackground"
            app:layout_constraintTop_toTopOf="@+id/view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@+id/view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@+id/view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder" />

        <ImageView
            android:id="@+id/imgView_cityMap"
            android:src="@drawable/img_city_map"
            style="@style/ImgCityMap"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder"/>

        <View
            android:id="@+id/view_containerComponentsTips"
            android:background="@drawable/container_components"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="480dp"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder"/>

        <TextView
            android:id="@+id/txtView_gameTitle"
            style="@style/TextViewGameTitle"
            android:layout_marginTop="20dp"
            android:text="@string/game_title_tutorial"
            app:layout_constraintTop_toTopOf="@id/view_containerComponentsTips"
            app:layout_constraintStart_toStartOf="@id/view_containerComponentsTips"
            app:layout_constraintEnd_toEndOf="@id/view_containerComponentsTips"
            app:layout_constraintBottom_toTopOf="@id/txtView_gameDesc"/>

        <TextView
            android:id="@+id/txtView_gameDesc"
            style="@style/TextViewGameDesc"
            android:layout_marginBottom="30dp"
            android:text="@string/game_desc_tutorial"
            app:layout_constraintBottom_toBottomOf="@id/view_containerComponentsTips"
            app:layout_constraintEnd_toEndOf="@id/view_containerComponentsTips"
            app:layout_constraintStart_toStartOf="@id/view_containerComponentsTips"
            app:layout_constraintTop_toBottomOf="@+id/txtView_gameTitle" />

        <View
            android:id="@+id/view_containerPlayerStatus"
            android:background="@drawable/container_logo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="300dp"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder"/>

        <ImageView
            android:id="@+id/imgView_ProfessorArtigo"
            android:src="@drawable/img_professor_artigo_sv_says"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="250dp"
            android:layout_marginBottom="260dp"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder"/>

        <TextView
            android:id="@+id/txtView_tentativas"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:text="@string/game_continue"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/view_containerPlayerStatus"
            app:layout_constraintStart_toStartOf="@id/view_containerPlayerStatus"
            app:layout_constraintEnd_toEndOf="@id/view_containerPlayerStatus"
            app:layout_constraintBottom_toBottomOf="@+id/view_containerPlayerStatus"/>

        <ImageView
            android:id="@+id/imgView_Lvl1"
            android:src="@drawable/img_levelpoint_a"
            android:layout_marginTop="90dp"
            android:layout_marginRight="260dp"
            style="@style/ImgLevelPoint"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder" />

        <ImageView
            android:id="@+id/imgView_Lvl2"
            android:src="@drawable/img_levelpoint_b"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="10dp"
            style="@style/ImgLevelPoint"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder" />

        <ImageView
            android:id="@+id/imgView_Lvl3"
            android:src="@drawable/img_levelpoint_a"
            android:layout_marginTop="320dp"
            android:layout_marginRight="195dp"
            style="@style/ImgLevelPoint"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder" />

        <ImageView
            android:id="@+id/imgView_Lvl4"
            android:src="@drawable/img_levelpoint_b"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="260dp"
            style="@style/ImgLevelPoint"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder" />

        <ImageView
            android:id="@+id/imgView_Lvl5"
            android:src="@drawable/img_levelpoint_b"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="130dp"
            style="@style/ImgLevelPoint"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>