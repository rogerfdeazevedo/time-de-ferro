<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".activity.TutorialActivity">

        <View
            android:id="@+id/view_containerTitle"
            style="@style/ContainerTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtView_title"
            style="@style/Title"
            android:text="@string/title_activity_mapa_da_cidade"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_ContainerBorder"
            android:background="@drawable/container_border"
            android:layout_width="370dp"
            android:layout_height="600dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="@+id/txtView_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <ImageView
            android:id="@+id/imgView_CityBackground"
            android:src="@drawable/img_city_background"
            style="@style/ImgCityBackground"
            app:layout_constraintTop_toTopOf="@+id/txtView_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/view_containerComponents"
            android:background="@drawable/container_components"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="110dp"
            app:layout_constraintTop_toTopOf="@+id/txtView_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imgView_professorArtigo"/>

        <TextView
            android:id="@+id/txtView_gameTitle"
            style="@style/TextViewGameDesc"
            android:layout_marginTop="20dp"
            android:text="@string/game_title_tutorial"
            android:textStyle="bold"
            android:textSize="19sp"
            app:layout_constraintTop_toTopOf="@+id/txtView_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imgView_professorArtigo" />

        <TextView
            android:id="@+id/txtView_gameDesc"
            style="@style/TextViewGameDesc"
            android:layout_marginTop="10dp"
            android:text="@string/game_desc_level"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/txtView_gameTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"  />

        <ImageView
            android:id="@+id/imgView_professorArtigo"
            android:src="@drawable/img_professor_artigo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imgView_cityMap"/>

        <ImageView
            android:id="@+id/imgView_cityMap"
            android:src="@drawable/img_city_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            app:layout_constraintTop_toTopOf="@id/imgView_professorArtigo"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>