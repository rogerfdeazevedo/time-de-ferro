<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".activity.TutorialActivity">

        <View
            android:id="@+id/view_ContainerTitulo_ActivityMapaDaCidade"
            style="@style/ContainerTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtView_Titulo_ActivityMapaDaCidade"
            style="@style/Title"
            android:text="@string/title_activity_city_map"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_ContainerBorder_ActivityMapaDaCidade"
            style="@style/ContainerCityBackgroundBorder"
            app:layout_constraintTop_toBottomOf="@+id/txtView_Titulo_ActivityMapaDaCidade"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/imgView_CityBackground_ActivityMapaDaCidade"
            android:src="@drawable/img_city_background"
            style="@style/ImgCityBackground"
            app:layout_constraintTop_toTopOf="@+id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintStart_toStartOf="@+id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintEnd_toEndOf="@+id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder_ActivityMapaDaCidade" />

        <ImageView
            android:id="@+id/imgView_CityMap_ActivityMapaDaCidade"
            android:src="@drawable/img_city_map"
            style="@style/ImgCityMap"
            app:layout_constraintTop_toTopOf="@+id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintStart_toStartOf="@+id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintEnd_toEndOf="@+id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder_ActivityMapaDaCidade"/>

        <View
            android:id="@+id/view_ContainerComponents_ActivityMapaDaCidade"
            android:background="@drawable/container_components"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="480dp"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder_ActivityMapaDaCidade"/>

        <TextView
            android:id="@+id/txtView_InfoTitulo_ActivityMapaDaCidade"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_title_tutorial"
            app:layout_constraintTop_toTopOf="@id/view_ContainerComponents_ActivityMapaDaCidade"
            app:layout_constraintStart_toStartOf="@id/view_ContainerComponents_ActivityMapaDaCidade"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerComponents_ActivityMapaDaCidade"
            app:layout_constraintBottom_toTopOf="@id/txtView_InfoDescricao_ActivityMapaDaCidade"/>

        <TextView
            android:id="@+id/txtView_InfoDescricao_ActivityMapaDaCidade"
            style="@style/TextView_Text_Descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="30dp"
            android:text="@string/game_desc_tutorial"
            app:layout_constraintBottom_toBottomOf="@id/view_ContainerComponents_ActivityMapaDaCidade"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerComponents_ActivityMapaDaCidade"
            app:layout_constraintStart_toStartOf="@id/view_ContainerComponents_ActivityMapaDaCidade"
            app:layout_constraintTop_toBottomOf="@+id/txtView_InfoTitulo_ActivityMapaDaCidade" />

        <View
            android:id="@+id/view_Container_StatusJogador_ActivityMapaDaCidade"
            android:background="@drawable/container_logo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="300dp"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder_ActivityMapaDaCidade"/>

        <TextView
            android:id="@+id/txtView_StatusJogador_Tentativas_ActivityMapaDaCidade"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/game_continue"
            app:layout_constraintTop_toTopOf="@id/view_Container_StatusJogador_ActivityMapaDaCidade"
            app:layout_constraintStart_toStartOf="@id/view_Container_StatusJogador_ActivityMapaDaCidade"
            app:layout_constraintEnd_toEndOf="@id/view_Container_StatusJogador_ActivityMapaDaCidade"
            app:layout_constraintBottom_toBottomOf="@+id/view_Container_StatusJogador_ActivityMapaDaCidade"/>

        <ImageView
            android:id="@+id/imgView_ProfessorArtigo_ActivityMapaDaCidade"
            android:src="@drawable/img_professor_artigo_sv_says"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="250dp"
            android:layout_marginBottom="260dp"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder_ActivityMapaDaCidade"/>

        <ImageView
            android:id="@+id/imgView_Lvl1_ActivityMapaDaCidade"
            android:src="@drawable/img_levelpoint_a"
            android:layout_marginTop="90dp"
            android:layout_marginRight="260dp"
            style="@style/ImgLevelPoint"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder_ActivityMapaDaCidade" />

        <ImageView
            android:id="@+id/imgView_Lvl2_ActivityMapaDaCidade"
            android:src="@drawable/img_levelpoint_b"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="10dp"
            style="@style/ImgLevelPoint"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder_ActivityMapaDaCidade" />

        <ImageView
            android:id="@+id/imgView_Lvl3_ActivityMapaDaCidade"
            android:src="@drawable/img_levelpoint_a"
            android:layout_marginTop="320dp"
            android:layout_marginRight="195dp"
            style="@style/ImgLevelPoint"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder_ActivityMapaDaCidade" />

        <ImageView
            android:id="@+id/imgView_Lvl4_ActivityMapaDaCidade"
            android:src="@drawable/img_levelpoint_b"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="260dp"
            style="@style/ImgLevelPoint"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder_ActivityMapaDaCidade" />

        <ImageView
            android:id="@+id/imgView_Lvl5_ActivityMapaDaCidade"
            android:src="@drawable/img_levelpoint_b"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="130dp"
            style="@style/ImgLevelPoint"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder_ActivityMapaDaCidade"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder_ActivityMapaDaCidade" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>