<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".activity.MainActivity">

        <TextView
            android:id="@+id/textView_appVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="@string/app_version"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textAlignment="gravity"
            android:gravity="right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view_containerHeader" />

        <View
            android:id="@+id/view_containerHeader"
            android:background="@drawable/container_logo"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_appVersion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imgView_logo" />

        <ImageView
            android:id="@+id/imgView_blackEagle"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:src="@drawable/img_black_eagle_stars"
            app:layout_constraintTop_toTopOf="@+id/view_containerHeader"
            app:layout_constraintStart_toStartOf="@+id/view_containerHeader"
            app:layout_constraintEnd_toEndOf="@+id/view_containerHeader"
            app:layout_constraintBottom_toBottomOf="@+id/view_containerHeader" />

        <ImageView
            android:id="@+id/imgView_logo"
            android:src="@drawable/img_logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view_containerHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view_containerComponents" />
        <View
            android:id="@+id/view_containerComponents"
            style="@style/ContainerComponents"
            app:layout_constraintTop_toBottomOf="@+id/imgView_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_novoJogo"
            style="@style/Buttom"
            android:text="@string/btn_new_game"
            app:layout_constraintTop_toTopOf="@+id/view_containerComponents"
            app:layout_constraintStart_toStartOf="@id/view_containerComponents"
            app:layout_constraintEnd_toEndOf="@id/view_containerComponents"
            app:layout_constraintBottom_toBottomOf="@id/view_containerComponents"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>