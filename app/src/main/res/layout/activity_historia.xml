<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".activity.TutorialActivity">

        <View
            android:id="@+id/view_containerTitle"
            style="@style/ContainerTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtView_title"
            style="@style/Title"
            android:text="@string/title_activity_tutorial"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/view_ContainerImgCena"
            style="@style/ContainerCena"
            app:layout_constraintTop_toBottomOf="@+id/txtView_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imgView_CityBackground"
            android:src="@drawable/img_escritorio"
            style="@style/ImgCena"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtView_title" />

        <View
            android:id="@+id/view_containerComponents"
            style="@style/ContainerComponents"
            app:layout_constraintTop_toBottomOf="@+id/imgView_CityBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtView_gameTitle"
            style="@style/TextViewGameDesc"
            android:layout_marginTop="60dp"
            android:text="@string/game_title_history"
            android:textStyle="bold"
            android:textSize="19sp"
            app:layout_constraintTop_toBottomOf="@+id/imgView_CityBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtView_gameDesc"
            style="@style/TextViewGameDesc"
            android:layout_marginTop="10dp"
            android:text="@string/game_desc_history"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/txtView_gameTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"  />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Avancar"
            style="@style/Buttom"
            android:text="@string/btn_next"
            app:layout_constraintTop_toBottomOf="@+id/view_containerComponents"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>