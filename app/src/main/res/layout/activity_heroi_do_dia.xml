<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".activity.TutorialActivity">

        <View
            android:id="@+id/view_ContainerTitulo_ActivityHeroiDoDia"
            style="@style/ContainerTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtView_Titulo_ActivityHeroiDoDia"
            style="@style/Title"
            android:text="@string/title_activity_city_map"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_ContainerBorder_ActivityHeroiDoDia"
            style="@style/ContainerCityBackgroundBorder"
            app:layout_constraintTop_toBottomOf="@+id/txtView_Titulo_ActivityHeroiDoDia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/imgView_CityBackground_ActivityHeroiDoDia"
            android:src="@drawable/img_city_background"
            style="@style/ImgCityBackground"
            app:layout_constraintTop_toTopOf="@+id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintStart_toStartOf="@+id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@+id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder_ActivityHeroiDoDia" />

        <ImageView
            android:id="@+id/imgView_CityMap_ActivityHeroiDoDia"
            android:src="@drawable/img_city_map"
            style="@style/ImgCityMap"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder_ActivityHeroiDoDia"/>

        <View
            android:id="@+id/view_Container_Titulo_ActivityHeroiDoDia"
            android:background="@drawable/container_components"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="500dp"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder_ActivityHeroiDoDia"/>

        <TextView
            android:id="@+id/txtView_ContainerTitulo_ActivityHeroiDoDia"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_heroi_do_dia"
            app:layout_constraintTop_toTopOf="@id/view_Container_Titulo_ActivityHeroiDoDia"
            app:layout_constraintStart_toStartOf="@id/view_Container_Titulo_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_Container_Titulo_ActivityHeroiDoDia"
            app:layout_constraintBottom_toBottomOf="@id/view_Container_Titulo_ActivityHeroiDoDia" />

        <View
            android:id="@+id/view_Container_StatusJogador_ActivityHeroiDoDia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/container_logo"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintBottom_toTopOf="@+id/view_ContainerBorder_ActivityHeroiDoDia" />

        <TextView
            android:id="@+id/txtView_Cenario_ActivityHeroiDoDia"
            android:drawableRight="@drawable/img_ico_origem_poder_a"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/game_cenario"
            app:layout_constraintTop_toTopOf="@id/view_Container_StatusJogador_ActivityHeroiDoDia"
            app:layout_constraintStart_toStartOf="@id/view_Container_StatusJogador_ActivityHeroiDoDia"
            app:layout_constraintEnd_toStartOf="@id/txtView_Problema_ActivityHeroiDoDia"
            app:layout_constraintBottom_toBottomOf="@+id/view_Container_StatusJogador_ActivityHeroiDoDia"/>

        <TextView
            android:id="@+id/txtView_Problema_ActivityHeroiDoDia"
            android:drawableRight="@drawable/img_ico_estilo_a"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/game_problema"
            app:layout_constraintTop_toTopOf="@id/view_Container_StatusJogador_ActivityHeroiDoDia"
            app:layout_constraintStart_toEndOf="@id/txtView_Cenario_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_Container_StatusJogador_ActivityHeroiDoDia"
            app:layout_constraintBottom_toBottomOf="@+id/view_Container_StatusJogador_ActivityHeroiDoDia"/>

        <View
            android:id="@+id/view_Container_Heroi_Historico_ActivityHeroiDoDia"
            android:background="@drawable/container_components"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="270dp"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder_ActivityHeroiDoDia"/>

        <TextView
            android:id="@+id/txtView_Heroi_Nome_ActivityHeroiDoDia"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_heroi"
            app:layout_constraintTop_toTopOf="@id/view_Container_Heroi_Historico_ActivityHeroiDoDia"
            app:layout_constraintStart_toStartOf="@id/view_Container_Heroi_Historico_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_Container_Heroi_Historico_ActivityHeroiDoDia"
            app:layout_constraintBottom_toTopOf="@+id/txtView_Heroi_Historico_ActivityHeroiDoDia" />

        <TextView
            android:id="@+id/txtView_Heroi_Historico_ActivityHeroiDoDia"
            style="@style/TextView_Text_Descricao"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:text="@string/game_heroi_historico"
            app:layout_constraintTop_toBottomOf="@id/txtView_Heroi_Nome_ActivityHeroiDoDia"
            app:layout_constraintStart_toStartOf="@id/view_Container_Heroi_Historico_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_Container_Heroi_Historico_ActivityHeroiDoDia"
            app:layout_constraintBottom_toBottomOf="@+id/view_Container_Heroi_Historico_ActivityHeroiDoDia" />

        <View
            android:id="@+id/view_Container_Heroi_Atributos_ActivityHeroiDoDia"
            android:background="@drawable/container_components"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="260dp"
            app:layout_constraintTop_toTopOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintBottom_toTopOf="@+id/view_ContainerButton_ActivityHeroiDoDia"/>

        <ImageView
            android:id="@+id/imgView_Heroi_ActivityHeroiDoDia"
            android:src="@drawable/img_char_silhuete_b"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="300dp"
            app:layout_constraintTop_toTopOf="@id/view_Container_Heroi_Atributos_ActivityHeroiDoDia"
            app:layout_constraintStart_toStartOf="@id/view_Container_Heroi_Atributos_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_Container_Heroi_Atributos_ActivityHeroiDoDia"
            app:layout_constraintBottom_toBottomOf="@+id/view_Container_Heroi_Atributos_ActivityHeroiDoDia"/>

        <TextView
            android:id="@+id/txtView_Heroi_OrigemDoPoder_ActivityHeroiDoDia"
            android:drawableRight="@drawable/img_ico_origem_poder_a"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_heroi_origem_do_poder"
            app:layout_constraintTop_toTopOf="@+id/view_Container_Heroi_Atributos_ActivityHeroiDoDia"
            app:layout_constraintStart_toEndOf="@id/imgView_Heroi_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_Container_Heroi_Atributos_ActivityHeroiDoDia"
            app:layout_constraintBottom_toTopOf="@id/txtView_Heroi_Estilo_ActivityHeroiDoDia" />

        <TextView
            android:id="@+id/txtView_Heroi_Estilo_ActivityHeroiDoDia"
            android:drawableRight="@drawable/img_ico_estilo_a"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_heroi_estilo"
            app:layout_constraintTop_toTopOf="@+id/view_Container_Heroi_Atributos_ActivityHeroiDoDia"
            app:layout_constraintStart_toEndOf="@id/imgView_Heroi_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_Container_Heroi_Atributos_ActivityHeroiDoDia"
            app:layout_constraintBottom_toTopOf="@id/txtView_Heroi_HabilidadesTitulo_ActivityHeroiDoDia" />

        <TextView
            android:id="@+id/txtView_Heroi_HabilidadesTitulo_ActivityHeroiDoDia"
            android:drawableLeft="@drawable/img_ico_habilidades"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_habilidades_title"
            app:layout_constraintTop_toBottomOf="@+id/txtView_Heroi_Estilo_ActivityHeroiDoDia"
            app:layout_constraintStart_toEndOf="@id/imgView_Heroi_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_Container_Heroi_Atributos_ActivityHeroiDoDia"
            app:layout_constraintBottom_toBottomOf="@id/view_Container_Heroi_Atributos_ActivityHeroiDoDia" />

        <TextView
            android:id="@+id/txtView_Heroi_Habilidade_1_ActivityHeroiDoDia"
            style="@style/TextView_Text_Descricao"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="170dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_habilidade_1"
            app:layout_constraintTop_toBottomOf="@id/txtView_Heroi_HabilidadesTitulo_ActivityHeroiDoDia"
            app:layout_constraintStart_toEndOf="@id/imgView_Heroi_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_Container_Heroi_Atributos_ActivityHeroiDoDia"
            app:layout_constraintBottom_toTopOf="@id/txtView_Heroi_Habilidade_2_ActivityHeroiDoDia" />

        <TextView
            android:id="@+id/txtView_Heroi_Habilidade_2_ActivityHeroiDoDia"
            style="@style/TextView_Text_Descricao"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="170dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_habilidade_2"
            app:layout_constraintTop_toBottomOf="@id/txtView_Heroi_Habilidade_1_ActivityHeroiDoDia"
            app:layout_constraintStart_toEndOf="@id/imgView_Heroi_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_Container_Heroi_Atributos_ActivityHeroiDoDia"
            app:layout_constraintBottom_toTopOf="@id/txtView_Heroi_EspecialTitulo_ActivityHeroiDoDia" />

        <TextView
            android:id="@+id/txtView_Heroi_EspecialTitulo_ActivityHeroiDoDia"
            android:drawableLeft="@drawable/img_ico_especial"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_especial_title"
            app:layout_constraintTop_toBottomOf="@id/txtView_Heroi_Habilidade_2_ActivityHeroiDoDia"
            app:layout_constraintStart_toEndOf="@id/imgView_Heroi_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_Container_Heroi_Atributos_ActivityHeroiDoDia"
            app:layout_constraintBottom_toTopOf="@id/txtView_Heroi_Especial_ActivityHeroiDodia" />

        <TextView
            android:id="@+id/txtView_Heroi_Especial_ActivityHeroiDodia"
            style="@style/TextView_Text_Descricao"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="170dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_especial_title"
            app:layout_constraintTop_toBottomOf="@id/txtView_Heroi_EspecialTitulo_ActivityHeroiDoDia"
            app:layout_constraintStart_toEndOf="@id/imgView_Heroi_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_Container_Heroi_Atributos_ActivityHeroiDoDia"
            app:layout_constraintBottom_toBottomOf="@id/view_Container_Heroi_Atributos_ActivityHeroiDoDia" />

        <View
            android:id="@+id/view_ContainerButton_ActivityHeroiDoDia"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/view_Container_Heroi_Atributos_ActivityHeroiDoDia"
            app:layout_constraintStart_toStartOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerBorder_ActivityHeroiDoDia"
            app:layout_constraintBottom_toBottomOf="@+id/view_ContainerBorder_ActivityHeroiDoDia"/>

       <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_HeroiEsquerda_ActivityHeroiDoDia"
            android:background="@drawable/buttom"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="@string/btn_hero_left"
            app:layout_constraintTop_toTopOf="@id/view_ContainerButton_ActivityHeroiDoDia"
            app:layout_constraintStart_toStartOf="@id/view_ContainerButton_ActivityHeroiDoDia"
            app:layout_constraintEnd_toStartOf="@id/btn_EnviarHeroi_ActivityHeroiDoDia"
            app:layout_constraintBottom_toBottomOf="@id/view_ContainerButton_ActivityHeroiDoDia"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_EnviarHeroi_ActivityHeroiDoDia"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttom"
            android:text="@string/btn_start_combat"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/view_ContainerButton_ActivityHeroiDoDia"
            app:layout_constraintStart_toEndOf="@id/btn_HeroiEsquerda_ActivityHeroiDoDia"
            app:layout_constraintEnd_toStartOf="@id/btn_HeroiDireita_ActivityHeroiDoDia"
            app:layout_constraintBottom_toBottomOf="@id/view_ContainerButton_ActivityHeroiDoDia"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_HeroiDireita_ActivityHeroiDoDia"
            android:background="@drawable/buttom"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:text="@string/btn_hero_right"
            app:layout_constraintTop_toTopOf="@id/view_ContainerButton_ActivityHeroiDoDia"
            app:layout_constraintStart_toEndOf="@id/btn_EnviarHeroi_ActivityHeroiDoDia"
            app:layout_constraintEnd_toEndOf="@id/view_ContainerButton_ActivityHeroiDoDia"
            app:layout_constraintBottom_toBottomOf="@id/view_ContainerButton_ActivityHeroiDoDia" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>