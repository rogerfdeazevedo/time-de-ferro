<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".activity.TutorialActivity">

        <View
            android:id="@+id/resumoDaTretaActivity_view_ContainerTitulo"
            style="@style/ContainerTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/resumoDaTretaActivity_txtView_Titulo"
            style="@style/Title"
            android:text="@string/resumoDaTretaActivity_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!--view_ContainerBorder_ActivityResumoDaTreta-->

        <View
            android:id="@+id/resumoDaTretaActivity_view_ContainerBorder"
            style="@style/ContainerCityBackgroundBorder"
            app:layout_constraintTop_toBottomOf="@+id/resumoDaTretaActivity_txtView_Titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/resumoDaTretaActivity_imgView_CityBackground"
            style="@style/ImgCityBackground"
            android:src="@drawable/img_city_background"
            app:layout_constraintTop_toTopOf="@+id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@+id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@+id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@+id/resumoDaTretaActivity_view_ContainerBorder" />

        <ImageView
            android:id="@+id/resumoDaTretaActivity_imgView_CityMap"
            android:src="@drawable/img_city_map"
            style="@style/ImgCityMap"
            app:layout_constraintTop_toTopOf="@id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@+id/resumoDaTretaActivity_view_ContainerBorder"/>

        <!--view_Container_ResumoDaTreta_ActivityResumoDaTreta-->

        <View
            android:id="@+id/resumoDaTretaActivity_view_Container_ResumoDaTreta"
            android:background="@drawable/container_components"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="500dp"
            app:layout_constraintTop_toTopOf="@id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@id/resumoDaTretaActivity_view_ContainerBorder"/>

        <TextView
            android:id="@+id/resumoDaTretaActivity_txtView_InfoTitulo"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_resumo_da_treta"
            app:layout_constraintTop_toTopOf="@id/resumoDaTretaActivity_view_Container_ResumoDaTreta"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_Container_ResumoDaTreta"
            app:layout_constraintEnd_toEndOf="@id/resumoDaTretaActivity_view_Container_ResumoDaTreta"
            app:layout_constraintBottom_toBottomOf="@id/resumoDaTretaActivity_view_Container_ResumoDaTreta" />

        <!--view_Container_StatusJogador_ActivityResumoDaTreta-->

        <View
            android:id="@+id/resumoDaTretaActivity_view_Container_StatusJogador"
            android:background="@drawable/container_logo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintBottom_toTopOf="@+id/resumoDaTretaActivity_view_ContainerBorder"/>

        <TextView
            android:id="@+id/resumoDaTretaActivity_txtView_StatusJogador_Tentativas"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="240dp"
            android:text="@string/game_continue"
            app:layout_constraintTop_toTopOf="@id/resumoDaTretaActivity_view_Container_StatusJogador"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_Container_StatusJogador"
            app:layout_constraintEnd_toEndOf="@id/resumoDaTretaActivity_view_Container_StatusJogador"
            app:layout_constraintBottom_toBottomOf="@+id/resumoDaTretaActivity_view_Container_StatusJogador"/>

        <!--view_ContainerCaracteristicas_ActivityResumoDaTreta-->

        <View
            android:id="@+id/resumoDaTretaActivity_view_ContainerCaracteristicas"
            android:background="@drawable/container_components"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="260dp"
            app:layout_constraintTop_toTopOf="@id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@+id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@+id/resumoDaTretaActivity_view_ContainerBorder"/>

        <TextView
            android:id="@+id/resumoDaTretaActivity_txtView_Cenario"
            android:drawableRight="@drawable/img_ico_origem_poder_a"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_cenario"
            app:layout_constraintTop_toTopOf="@+id/resumoDaTretaActivity_view_ContainerCaracteristicas"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_ContainerCaracteristicas"
            app:layout_constraintEnd_toEndOf="@id/resumoDaTretaActivity_view_ContainerCaracteristicas"
            app:layout_constraintBottom_toTopOf="@id/resumoDaTretaActivity_txtView_Problema" />

        <TextView
            android:id="@+id/resumoDaTretaActivity_txtView_Problema"
            android:drawableRight="@drawable/img_ico_estilo_a"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_problema"
            app:layout_constraintTop_toBottomOf="@id/resumoDaTretaActivity_txtView_Cenario"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_ContainerCaracteristicas"
            app:layout_constraintEnd_toEndOf="@id/resumoDaTretaActivity_view_ContainerCaracteristicas"
            app:layout_constraintBottom_toBottomOf="@id/resumoDaTretaActivity_view_ContainerCaracteristicas" />

        <!--view_ContainerCaracteristicas_ActivityResumoDaTreta-->

        <View
            android:id="@+id/resumoDaTretaActivity_view_ContainerAntagonista"
            android:background="@drawable/container_components"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="190dp"
            app:layout_constraintTop_toTopOf="@id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintEnd_toEndOf="@id/resumoDaTretaActivity_view_ContainerBorder"
            app:layout_constraintBottom_toBottomOf="@+id/resumoDaTretaActivity_view_ContainerBorder"/>

        <ImageView
            android:id="@+id/resumoDaTretaActivity_imgView_Antagonista"
            android:src="@drawable/img_char_silhuete_a"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="300dp"
            app:layout_constraintTop_toTopOf="@id/resumoDaTretaActivity_view_ContainerAntagonista"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_ContainerAntagonista"
            app:layout_constraintEnd_toEndOf="@id/resumoDaTretaActivity_view_ContainerAntagonista"
            app:layout_constraintBottom_toBottomOf="@+id/resumoDaTretaActivity_view_ContainerAntagonista"/>

        <TextView
            android:id="@+id/resumoDaTretaActivity_txtView_Antagonista_Nome"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_antagonista"
            app:layout_constraintTop_toTopOf="@id/resumoDaTretaActivity_view_ContainerAntagonista"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_ContainerAntagonista"
            app:layout_constraintEnd_toStartOf="@id/resumoDaTretaActivity_imgView_Antagonista"
            app:layout_constraintBottom_toTopOf="@id/resumoDaTretaActivity_txtView_Antagonista_Historico" />

        <TextView
            android:id="@+id/resumoDaTretaActivity_txtView_Antagonista_Historico"
            style="@style/TextView_Text_Descricao"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_antagonista_historico"
            app:layout_constraintTop_toBottomOf="@id/resumoDaTretaActivity_txtView_Antagonista_Nome"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_ContainerAntagonista"
            app:layout_constraintEnd_toStartOf="@id/resumoDaTretaActivity_imgView_Antagonista"
            app:layout_constraintBottom_toTopOf="@id/resumoDaTretaActivity_txtView_Antagonista_HabilidadesTitulo" />

        <TextView
            android:id="@+id/resumoDaTretaActivity_txtView_Antagonista_HabilidadesTitulo"
            android:drawableLeft="@drawable/img_ico_habilidades"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:text="@string/game_habilidades_title"
            app:layout_constraintTop_toBottomOf="@id/resumoDaTretaActivity_txtView_Antagonista_Historico"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_ContainerAntagonista"
            app:layout_constraintEnd_toStartOf="@id/resumoDaTretaActivity_imgView_Antagonista"
            app:layout_constraintBottom_toTopOf="@id/resumoDaTretaActivity_txtView_Antagonista_Habilidade_1" />

        <TextView
            android:id="@+id/resumoDaTretaActivity_txtView_Antagonista_Habilidade_1"
            style="@style/TextView_Text_Descricao"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_habilidade_1"
            app:layout_constraintTop_toBottomOf="@id/resumoDaTretaActivity_txtView_Antagonista_HabilidadesTitulo"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_ContainerAntagonista"
            app:layout_constraintEnd_toStartOf="@id/resumoDaTretaActivity_imgView_Antagonista"
            app:layout_constraintBottom_toTopOf="@id/resumoDaTretaActivity_txtView_Antagonista_Habilidade_2" />

        <TextView
            android:id="@+id/resumoDaTretaActivity_txtView_Antagonista_Habilidade_2"
            style="@style/TextView_Text_Descricao"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="40dp"
            android:text="@string/game_habilidade_2"
            app:layout_constraintTop_toBottomOf="@id/resumoDaTretaActivity_txtView_Antagonista_Habilidade_1"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_ContainerAntagonista"
            app:layout_constraintEnd_toStartOf="@id/resumoDaTretaActivity_imgView_Antagonista"
            app:layout_constraintBottom_toTopOf="@id/resumoDaTretaActivity_txtView_Antagonista_EspecialTitulo" />

        <TextView
            android:id="@+id/resumoDaTretaActivity_txtView_Antagonista_EspecialTitulo"
            android:drawableLeft="@drawable/img_ico_especial"
            style="@style/TextView_Text_Tilulo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:text="@string/game_especial_title"
            app:layout_constraintTop_toBottomOf="@id/resumoDaTretaActivity_txtView_Antagonista_Habilidade_2"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_ContainerAntagonista"
            app:layout_constraintEnd_toStartOf="@id/resumoDaTretaActivity_imgView_Antagonista"
            app:layout_constraintBottom_toTopOf="@id/resumoDaTretaActivity_txtView_Antagonista_Especial" />

        <TextView
            android:id="@+id/resumoDaTretaActivity_txtView_Antagonista_Especial"
            style="@style/TextView_Text_Descricao"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="60dp"
            android:text="@string/game_especial"
            app:layout_constraintTop_toBottomOf="@id/resumoDaTretaActivity_txtView_Antagonista_EspecialTitulo"
            app:layout_constraintStart_toStartOf="@id/resumoDaTretaActivity_view_ContainerAntagonista"
            app:layout_constraintEnd_toStartOf="@id/resumoDaTretaActivity_imgView_Antagonista"
            app:layout_constraintBottom_toBottomOf="@id/resumoDaTretaActivity_view_ContainerAntagonista" />

        <!--btn_HeroiDoDia_ActivityResumoDaTreta-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/resumoDaTretaActivity_btn_HeroiDoDia"
            style="@style/Buttom"
            android:text="@string/resumoDaTretaActivity_btn_select_hero"
            app:layout_constraintTop_toBottomOf="@+id/resumoDaTretaActivity_view_ContainerAntagonista"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>